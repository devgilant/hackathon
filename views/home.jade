extends layout

block content
	.row
	.row
	.row
	// row for every timeline
	div(ng-controller="TimelineController as ctrl")
		.panel-group(ng-repeat="timeline in timelines" id="accordion")
			.panel.panel-default
				.panel-heading
					h2
						a(data-toggle="collapse" data-parent="#accordion" href="#collapse{{timeline._id}}" ng-click="showButtons($index)")
							span {{timeline.name}}
						a.hidden(href="#" ng-click="addEvent($index)" id="btnAddEvent{{$index}}")
							i.fa.fa-calendar-plus-o
						a.hidden(href="#" ng-click="addBaseline($index)" id="btnAddBaseline{{$index}}")
							i.fa.fa-info
				div.panel-collapse.collapse(id="collapse{{timeline._id}}")
					.panel-body
						div(id="timeline_{{$index}}", tm-timeline)
		div.modal.fade(id="addEventModal",role="dialog")
			.modal-dialog
				// Modal content
				.modal-content
					.modal-header
						button.close(type="button",data-dismiss="modal") Cancel
						h4.modal-title Add Event
					.modal-body.form-group
						label Timeline index:
						span(id="index")
						label(for="caption") Caption:
						input.form-control(id="caption",type="text")
						label(for="description") Description:
						input.form-control(id="description",type="text")
						label(for="start") Start:
						input.form-control(id="start",type="text")
						label(for="start") End:
						input.form-control(id="end",type="text")
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") Cancel
						button.btn.btn-primary(type="button",ng-click="addEvent($('#addEventModal #index').text())") Add
