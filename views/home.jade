extends layout

block content
	.row
	.row
	.row
	// row for every timeline
	div(ng-controller="TimelineController as ctrl")
		.row(ng-repeat="timeline in timelines")
			.navbar.navbar-default.container-fluid
				.navbar-header
					span {{timeline.name}}
				.collapse.navbar-collapse
					form.navbar-form.navbar-right(role="form")
						button.btn.btn-default(data-toggle="modal",data-target="#addEventModal",ng-click="$('#addEventModal #index').text($index)") Add Event...
						button.btn.btn-default(ng-click="") Add Baseline...
			div(id="timeline_{{$index}}", tm-timeline)
		// Modal
		div.modal.fade(id="addEventModal",role="dialog")
			.modal-dialog
				// Modal content
				.modal-content
					.modal-header
						button.close(type="button",data-dismiss="modal") Cancel
						h4.modal-title Add Event
					.modal-body.form-group
						label Timeline index:
						span(id="index")
						label(for="caption") Caption:
						input.form-control(id="caption",type="text")
						label(for="description") Description:
						input.form-control(id="description",type="text")
						label(for="start") Start:
						input.form-control(id="start",type="text")
						label(for="start") End:
						input.form-control(id="end",type="text")
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") Cancel
						button.btn.btn-primary(type="button",ng-click="addEvent($('#addEventModal #index').text())") Add