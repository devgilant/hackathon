extends layout

block content
	.row
	.row
	.row
	// row for every timeline
	div(ng-controller="TimelineController as ctrl")
		.row(ng-repeat="timeline in timelines")
			.navbar.navbar-default.container-fluid
				.navbar-header
					span {{timeline.name}}
				.collapse.navbar-collapse
					form.navbar-form.navbar-right(role="form")
						button.btn.btn-default(data-toggle="modal",data-target="#addEventModal",ng-click="$('#addEventModal #index').val=$index") Add Event...
						button.btn.btn-default(ng-click="") Add Baseline...
			div(id="timeline_{{$index}}", tm-timeline)
		// Modal
		div.modal.fade(id="addEventModal",role="dialog")
  			.modal-dialog
    			// Modal content
    			.modal-content
      				.modal-header
        				button.close(type="button",data-dismiss="modal") Cancel
        				h4.modal-title Add Event
      				.modal-body
      					span Index:
      					span(id="index")
      				.modal-footer
        				button.btn.btn-default(type="button",data-dismiss="modal") Cancel
        				button.btn.btn-primary(type="button",data-dismiss="modal") Add

