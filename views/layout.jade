doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - Timeline
    link(rel='stylesheet', href='/css/main.css')

    // Angular Material Library
    link(rel="stylesheet", href="http://ajax.googleapis.com/ajax/libs/angular_material/1.0.5/angular-material.min.css")    

    // vis.js
    link(rel='stylesheet', href='/css/vendors/visjs/main.css')    
  body(ng-app='timelineApp')
    include partials/header

    .container
      include partials/flash
      block content

    include partials/footer

    // Angular Libraries
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.2/angular.min.js")
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.2/angular-animate.min.js")
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.2/angular-aria.min.js")
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.0-rc.2/angular-messages.min.js")

    // Angular Material Library
    script(src="http://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.js")

    // 3rd party libraries
    script(src='/js/lib/jquery.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(src='/js/lib/vis.min.js')

    // Timeline hackathon libraries
    script(src='/js/main.js')
    script(src='/js/controllers/timeline.js')      